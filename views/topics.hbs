<table>
    <tr>
        <td>
            <div id="content-container">
                {{#each topicData as |parentTopic|}}
                    <div class="topic-display card">
                        <h1 class="topic-display-title"><a href="/topics/{{parentTopic.parent.id}}/">{{parentTopic.parent.name}}</a></h1>
                        <hr>

                        {{#each parentTopic.childTopics as |child|}}
                            <div class="topic-display-child-topic"><a href="/topics/{{parentTopic.parent.id}}/{{child.id}}">{{child.name}}</a></div>
                        {{/each}}
                    </div>
                {{/each}}
            </div>
        </td>
        <td>
            {{>popularTopicsSidebar}}
            {{>popularResourcesSidebar}}
        </td>
    </tr>
</table>
